<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.Light.NoActionBar">
        <activity
            android:exported="true"
            android:name="com.lucasferreiramachado.kdeeplink.example.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- deeplinks-->

                <data android:scheme="http" android:host="www.myapp.com" android:pathPattern="/.*" />
                <data android:scheme="https" android:host="www.myapp.com" android:pathPattern="/.*" />

                <data android:scheme="myapp"
                      android:host="*"
                      android:pathPattern="/.*" />

            </intent-filter>
        </activity>
    </application>

</manifest>